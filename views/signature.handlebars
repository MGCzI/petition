{{> information}}



<section class="signature-section section-container">

<div class="inside-container config-container">

    {{>message}}

    <form class="form-container delete-signature-form" method="post">

        <img class="img-signature" src="{{signature}}" />

        <h3>Are you sure that you want to delete your signature?</h3>

        <div class="buttons-container">

            <button type="submit">Confirm</button>
            <a href="/configuration" class="cancel-Button likeButton">Cancel</a>


        </div>

    </form>
</div>

</section>
