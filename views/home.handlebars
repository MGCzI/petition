{{> information}}


<section class="register-section section-container">

<div class="inside-container">

        <h1>Sign In</h1>

        {{>message}}


    <form class="register-form form-container" method="post">

        <label for="name">Name</label>
        <input id="name" type="text" pattern="[A-Za-z\s]+" name="name" required />

        <label for="surname">Surname</label>
        <input id="surname" type="text" pattern="[A-Za-z\s]+" name="surname" required />

        <label for="email">E-mail</label>
        <input id="email" type="email"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" name="email" required />

        <label for="password">Password</label>
        <input id="password" type="password" name="password" required />


        <div class="buttons-container">
            <button type="submit">Register</button>
        </div>
    </form>
    <p>Do you already have an account? <a href="/login">Log In</a></p>

</div>


</section>